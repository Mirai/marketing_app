<h1>Contact</h1>
<%= form_for @contact do |f| %>
  <p><%= f.error_messages %></p>
  <p>
    <%= f.label :name %>*<br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>*<br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :phone %><br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label :message %>*<br />
    <%= f.text_area :message, :rows => 4 %>
  </p>
  <p>
    <%= f.submit "Contact Us" %>
  </p>
<% end %>
